<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 3.10//EN"  
          "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">  
<hibernate-configuration>  
    <session-factory>  
        <property name="hbm2ddl.auto">update</property>  
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>  
        <property name="connection.url">jdbc:mysql://localhost:3306/employeemanagementdb?createDatabaseIfNotExist=true</property>  
        <property name="connection.username">root</property>  
        <property name="connection.password">123456</property>  
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>


		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
	    <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
	
		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property> 
        
        
    	<mapping class="com.emp.mgnt.entity.EmployeeInfo"/>
    	<!-- <mapping class="com.emp.mgnt.entity.Task"/>
    	<mapping class="com.emp.mgnt.entity.EmployeeDepartment"/>
    	<mapping class="com.emp.mgnt.entity.EmployeeRole"/>
    	<mapping class="com.emp.mgnt.entity.User"/> -->
    	
    </session-factory>  
</hibernate-configuration> 